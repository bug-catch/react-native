{
    "name": "@bug-catch/react-native",
    "version": "2.1.13",
    "homepage": "https://github.com/bug-catch/react-native#readme",
    "description": "Catch all errors and log custom events within react-native app.",
    "scripts": {
        "build": "tsc && vite build",
        "dev": "vite",
        "lint": "tsc",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest watch"
    },
    "dependencies": {
        "@react-native-async-storage/async-storage": "^1.15.14",
        "expo-device": "^5.4.0",
        "react-native-exception-handler": "^2.10.10"
    },
    "devDependencies": {
        "@types/node": "^20.4.8",
        "happy-dom": "^10.8.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.8",
        "vite-plugin-dts": "^3.5.0",
        "vite-tsconfig-paths": "^4.2.0",
        "vitest": "^0.34.1"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "files": [
        "dist",
        "web.js"
    ],
    "types": "./dist/index.d.ts",
    "main": "./dist/index.umd.js",
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.umd.js"
        }
    },
    "author": {
        "name": "Harry Merritt",
        "url": "https://github.com/hmerritt"
    },
    "keywords": [
        "bugs",
        "bug-catch"
    ],
    "bugs": {
        "url": "https://github.com/bug-catch/react-native/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bug-catch/react-native.git"
